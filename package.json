{
  "name": "eslint-config-trigo",
  "version": "11.0.0",
  "description": "trigo's base JS ESLint config",
  "main": "index.js",
  "repository": "https://github.com/trigo-at/eslint-config-trigo.git",
  "author": "trigo GmbH <office@trigo.at>",
  "license": "MIT",
  "scripts": {
    "lint": "eslint \"**/*.{js,jsx}\"",
    "prettify": "prettier --write '**/*.{js,jsx}'",
    "eslint-check": "eslint --print-config .eslintrc.js | eslint-config-prettier-check"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "peerDependencies": {
    "babel-eslint": "^10",
    "eslint": "^6",
    "eslint-config-airbnb": "^17",
    "eslint-config-airbnb-base": "^13",
    "eslint-plugin-filenames": "^1",
    "eslint-plugin-import": "^2",
    "eslint-plugin-jest": "^22",
    "eslint-plugin-jsx-a11y": "^6",
    "eslint-plugin-mocha": "^6",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^1"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.2",
    "eslint": "^6.2.1",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.1.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-mocha": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.0",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^2.0.1",
    "husky": "^3.0.4",
    "lint-staged": "^9.2.3",
    "prettier": "^1.18.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {}
}
